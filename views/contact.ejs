
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h2>Daftar Kontak</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data</a>

            <% if (msg.length !== 0) { %>
             <div class="alert alert-warning fw-bold" role="alert">
                       <%= msg %>
              </div>
            <% } %>
            
              <table class="table">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Nama</th>
                  <th scope="col">Alamat</th>
                  <th scope="col">No HP</th>
                  <th scope="col">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <!-- info kontak kosong -->
                <% if (contacts.length === 0) { %>
                  <tr>
                    <td colspan="5"> 
                      <div class="alert alert-warning fw-bold" role="alert">
                        Data Kontak Masih kosong
                      </div>
                    </td>
                  </tr>
                
                <% } %>

                <!-- tampilan daftar kontak -->
                <% contacts.forEach((contact, i) => { i++ %>
                  <tr>
                    <th scope="row"><%= i++  %></th>
                    <td><%= contact.nama  %>  </td>
                    <td><%= contact.alamat  %></td>
                    <td><%= contact.no_HP  %></td>
                    <td>
                      <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
                    </td>
                  </tr>
                
                <% }) %>
                
              </tbody>
            </table>
      </div>
    </div>
  </div>