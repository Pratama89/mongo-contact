<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <% if (!contact) { %>
       <div class="alert alert-warning fw-bold" role="alert">
        Data Kontak tidak ada <a href="/contact" class="alert-link fw-normal"> <br> &laquo;  Kembali ke Daftar Kontak 
        </a>
      </div>
      <% } else { %>
        <h2>Detail Contact</h2>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= contact.nama %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.alamat %></h6>
            <p class="card-text"><%= contact.no_HP %></p>

            <a href="/contact/edit/<%= contact.nama %>" class="card-link btn btn-info badge"> Ubah</a>
            <a href="/contact/delete/<%= contact.nama %>" class="card-link btn btn-danger badge" onclick="return confirm('yakin?');"> Hapus</a>
            <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
          </div>
        </div>
        <% } %>
    </div>
  </div>
</div>